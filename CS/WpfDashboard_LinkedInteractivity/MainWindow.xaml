<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDashboard_LinkedInteractivity"
        xmlns:dxdash="http://schemas.devexpress.com/winfx/2008/xaml/dashboard" x:Class="WpfDashboard_LinkedInteractivity.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Click="Button_Click">Show Child Window</Button>
        <dxdash:DashboardControl x:Name="mainDashboardControl" Grid.Row="1" MinHeight="150"/>

    </Grid>
</Window>
